<h2 class="page-header"><%= book.title %></h2>
<img src="<%=  book.coverImagePath %>" width="100" height="150" />
<div>
  Author: <%= book.author.name %>
</div>
<div>
  Publication Date: <%= book.publicationDate.toLocaleString('default', {day:
  'numeric' , month: 'long', year: 'numeric' }) %>
</div>
<div>
  Page Count: <%= book.pageCount %>
</div>
<div>
  Description: <%= book.description %>
</div>
<div class="btn-row">
  <a class="btn btn-primary"/books/<%= book.id %>/edit">Edit</a>
  <a class="btn btn-primary"/authors/<%= book.author.id %>">View Author</a>
  <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
</div>